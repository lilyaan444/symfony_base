{% extends 'base.html.twig' %}

{% block title %}Liste des burgers{% endblock %}
{% block body %}
    <h1>Liste des burgers</h1>

    <p>Vérification de la variable burger :</p>
    {{ burgers|length }} burgers trouvés.

    <ul>
        {% for burger in burgers %}
            <li>{{ burger.name }}</li>
        {% else %}
            <li>Aucun burger trouvé.</li>
        {% endfor %}
    </ul>
{% endblock %}
